{% extends 'generic/Popup.twig' %}
{% block popup_id %}toggle-columns-form{% endblock %}
{% block title %}Toggle Columns{% endblock %}
{% block body %}
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}" />
    <p>
        Select which columns you would like to display.
    </p>
    <div class="edit_user_row">
        <input type="checkbox"
                name="user_secondary_email_notify_change"
                {% if user.getEmailBoth() %}
                    checked
                {% endif %}
                id="user-secondary-email-notify-change"
                {% if user.getEmailBoth() %}
                    data-current-second-email-notify="1"/>
                {% else %}
                    data-current-second-email-notify="0"/>
                {% endif %}
        <label for="user-secondary-email-notify-change">Enable Second Email Notifications:</label>
    </div>
{% endblock %}
{% block form %}
    <form method="post" onsubmit="return updateManageStudentsColumns()">
        {{ parent() }}
    </form>
{% endblock %}
{% block buttons %}
    {{ block('close_button') }}
    <input class="btn btn-primary" type="submit" value="Submit" />
{% endblock %}